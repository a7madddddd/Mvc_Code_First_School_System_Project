@model finalTaskCodeFirstSchool.Models.Class

@{
    ViewBag.Title = "Delete Class";
}

<h2>Delete Class</h2>

<h3>Are you sure you want to delete this class?</h3>
<div>
    <h4>This will also delete all students and tasks associated with this class.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Class", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Yes, Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
